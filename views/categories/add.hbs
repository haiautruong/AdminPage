<div class="container">
    <div class="col-sm-12">
        <h2 class="text-uppercase">Thêm danh mục mới</h2>
        <form action="" method="POST">
            <div class="form-group">
                <label for="nameCategory">Tên danh mục</label>
                {{#if mess}}
                <span class="pull-right">{{mess}}. Mời nhập danh mục khác</span>
                {{/if}}
                <input
                    type="text"
                    class="form-control"
                    name="newcategory"
                    placeholder="Nhập tên danh mục">
            </div>
            <button type="submit" class="btn btn-success form-control">Thêm</button>
        </form>
    </div>
</div>