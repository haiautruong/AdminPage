<div class="container">
  <div class="col-sm-12">
    <h2 class="text-uppercase"><span class="glyphicon glyphicon-list-alt"></span> Danh sách đơn hàng</h2>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="success">
            <th>Mã đơn hàng</th>
            <th>Mã người dùng</th>
            <th>Địa chỉ</th>
            <th>Sản phẩm</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          {{#if list}}
          {{#each list}}
          <tr>
            <th scope="col">{{this._id}}</th>
            <td>{{this.idUser}}</td>
            <td>{{this.address}}</td>
            <td>
              {{#each listProducts}}
              <div style="border-top: 1px solid gray">

                <p>Mã sản phẩm: {{idProduct}}</p>
                <p>Tên sản phẩm: {{nameProduct}}</p>
                <p>Số lượng: {{quantity}}</p>
                <p>Đơn giá: {{formatCurrency price}}</p>
              </div>
              {{/each}}
              </td>
            <td>{{formatCurrency this.total}}</td>
            <td>{{formatStatus this.status}}</td>
            <td>
              <div class="btn-group">
                <a href="/users/edit" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>
                  Edit</a>
                <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</a>
              </div>
            </td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>