<div class="container">
    <div class="col-sm-12">
        <form>
            <div class="form-group">
                <label for="name">Tên sản phẩm</label>
                <input
                    type="text"
                    class="form-control"
                    id="name"
                >
            </div>
            <div class="form-group">
                <label>Danh mục</label>
                <select class="custom-select form-control">
                    {{#each list}}
                    <option>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="price">Giá</label>
                <input
                    type="text"
                    class="form-control"
                    id="price"
                >
            </div>
            <div class="form-group">
                <label for="nameCategory">CPU</label>
                <input
                    type="text"
                    class="form-control"
                    id="cpu"
                >
            </div>
            <div class="form-group">
                <label for="disk">Disk</label>
                <input
                    type="text"
                    class="form-control"
                    id="disk"
                >
            </div>
            <div class="form-group">
                <label for="screen">Màn hình</label>
                <input
                    type="text"
                    class="form-control"
                    id="screen">
            </div>
            <div class="form-group">
                <label for="gpu">GPU</label>
                <input
                    type="text"
                    class="form-control"
                    id="gpu">
            </div>
            <div class="form-group">
                <label for="audio">Audio</label>
                <input
                    type="text"
                    class="form-control"
                    id="audio">
            </div>
            <div class="form-group">
                <label for="pin">Pin</label>
                <input
                    type="text"
                    class="form-control"
                    id="pin">
            </div>
            <div class="form-group">
                <label for="warranty">Nhà sản xuất</label>
                <input
                    type="text"
                    class="form-control"
                    id="warranty">
            </div>
            <div class="form-group">
                <label for="weight">Trọng lượng</label>
                <input
                    type="text"
                    class="form-control"
                    id="weight">
            </div>
            <div class="form-group">
                <label for="image">Link hình ảnh</label>
                <input
                    type="text"
                    class="form-control"
                    id="image">
            </div>
            <div class="form-group">
                <label for="more-info">Thông tin khác</label>
                <input
                    type="text"
                    class="form-control"
                    id="more-info">
            </div>
            <button type="submit" class="btn btn-success form-control">Thêm</button>
        </form>
    </div>
</div>