<div class="container">
  <div class="col-sm-12">
    <h2 class="text-uppercase"><span class="glyphicon glyphicon-list-alt"></span> Danh sách sản phẩm</h2>
    <div>
      <a href="/products/add" class="btn btn-success"><span class="fa fa-plus-circle"></span> Add</a>
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="success">
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Loại sản phẩm</th>
            <th>Nhà sản xuất</th>
            <th>Giá</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          {{#if list}}
          {{#each list}}
          <tr>
            <th scope="col">{{this._id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.categoryCode.name}}</td>
            <td>{{this.brandCode.name}}</td>
            <td>{{formatCurrency this.price}}</td>
            <td>
              <div class="btn-group">
                <a href="/products/edit" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>
                  Edit</a>
                <a href="#" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Delete</a>
              </div>
            </td>
          </tr>
          {{/each}}
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>